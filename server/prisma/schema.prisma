generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{
   id Int @id @default(autoincrement())
   uuid String @unique @default(uuid())
   name String
   email String @unique
   contact String
   tickets Query[]
}

model Query{
  id Int @id @default(autoincrement())
  user User @relation(fields: [userid] , references: [uuid])
  userid String
  uuid String @unique @default(uuid())
  title String
  description String
  origin String
  priority Priority
  status Status @default(NEW)
  type Type @default(NONE)
  createdAt DateTime @default(now())
  assignedTo String? @default("cb259d6a-8d28-45c0-9114-e9f4266d455c")
  admins Admins? @relation(fields: [assignedTo] , references: [uuid])
  solvedBy String? @default("None")
}

model Admins{
  id Int @id @default(autoincrement())
  uuid String @unique @default(uuid())
  name String
  email String @unique
  department String
  password String
  superadmin Boolean @default(false)
  queries Query[]
}




enum Priority{
  HIGH
  MEDIUM
  LOW
}

enum Status{
  NEW
  INPROGRESS
  SOLVED
}

enum Type{
  NONE
  BUG
  SALES

}